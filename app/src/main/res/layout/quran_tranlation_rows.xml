<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/erabnotesexpand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/erab_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:padding="@dimen/textViewPadding"
            style="@android:style/TextAppearance.DeviceDefault.Large"
             
            android:visibility="gone" />

        <TextView
            android:id="@+id/erab_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:padding="@dimen/textViewPadding"
             
            android:visibility="gone" />

        <ImageView
            android:id="@+id/erab_img"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"

            android:layout_centerInParent="false"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:rotation="0.0"
            android:scaleType="fitCenter"

            android:tooltipText="@string/Alert"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_baseline_double_arrow_24" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/translationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/erabnotesexpand"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/translate_textViewnote"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:padding="@dimen/textViewPadding"

            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:visibility="gone" />


        <TextView
            android:id="@+id/translate_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/translate_textViewnote"
            android:alpha="0.7"
            style="@android:style/TextAppearance.DeviceDefault.Medium"

            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:padding="@dimen/textViewPadding"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
             />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/jalalalaynview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/translationView">

        <TextView
            android:id="@+id/quran_jalalaynnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:fontFamily="cursive"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:padding="@dimen/textViewPadding"

            android:visibility="gone" />

        <TextView
            android:id="@+id/quran_jalalayn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quran_jalalaynnote"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:padding="@dimen/textViewPadding"
             
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/literationview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jalalalaynview">

        <TextView
            android:id="@+id/quran_transliterationnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:fontFamily="cursive"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:padding="@dimen/textViewPadding"
             
            android:visibility="gone" />

        <TextView
            android:id="@+id/quran_transliteration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quran_transliterationnote"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:padding="@dimen/textViewPadding"
             
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/expandButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/literationview">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/expandButton"
        android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/erabexpand"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"

            android:layout_centerInParent="false"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:rotation="0.0"

            android:scaleType="fitCenter"
            android:tooltipText="@string/Alert"
            app:srcCompat="@drawable/ic_baseline_double_arrow_24" />

        <TextView
            android:id="@+id/erab_textViewnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/erabexpand"
            android:fontFamily="cursive"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:padding="@dimen/textViewPadding"
            android:text="Erab"
            style="@android:style/TextAppearance.DeviceDefault.Medium"

            android:visibility="gone"
            app:srcCompat="@drawable/ic_baseline_double_arrow_24" />

        <TextView
            android:id="@+id/erab_textView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/erab_textViewnote"

            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:padding="@dimen/textViewPadding"
            android:visibility="gone" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      android:layout_below="@+id/top"
        android:layout_marginTop="20dp">


        <ImageView
            android:id="@+id/erabexpanden"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"

            android:layout_centerInParent="false"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:rotation="0.0"

            android:scaleType="fitCenter"
            android:tooltipText="@string/Alert"
            app:srcCompat="@drawable/ic_baseline_double_arrow_24" />

        <TextView
            android:id="@+id/erab_textViewnoteen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/erabexpanden"
            android:fontFamily="cursive"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:padding="@dimen/textViewPadding"
            android:text="Erab"
            style="@android:style/TextAppearance.DeviceDefault.Medium"

            android:visibility="gone"
            app:srcCompat="@drawable/ic_baseline_double_arrow_24" />

        <TextView
            android:id="@+id/erab_textViewen"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/erab_textViewnoteen"

            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:lineSpacingExtra="@dimen/lineSpacingExtra"
            android:padding="@dimen/textViewPadding"
            android:visibility="gone" />


    </RelativeLayout>

</RelativeLayout>