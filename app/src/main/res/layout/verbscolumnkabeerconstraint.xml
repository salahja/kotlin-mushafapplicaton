<?xml version="1.0" encoding="utf-8"?>
<com.example.justJava.ZoomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="true"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbars="vertical"
    android:singleLine="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:dividerHeight="0dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@color/colorAccent"
            app:strokeColor="@color/color_primary_variant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/negcommand"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/negcommand"
                    android:autoSizeMaxTextSize="26sp"
                    android:autoSizeMinTextSize="24sp"
                    android:autoSizeStepGranularity="6sp"
                    android:gravity="center|right"
                    android:paddingStart="5dp"
                    android:paddingEnd="3dp"
                    app:autoSizeTextType="none" />

                <TextView
                    android:id="@+id/command"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:autoSizeMaxTextSize="26sp"
                    android:autoSizeMinTextSize="24sp"
                    android:autoSizeStepGranularity="6sp"
                    android:gravity="center|right"
                    android:paddingStart="5dp"
                    android:paddingEnd="3dp"
                    android:text="@string/faelamr"
                    app:autoSizeTextType="none" />

                <TextView
                    android:id="@+id/presentpassive"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:autoSizeMaxTextSize="26sp"
                    android:autoSizeMinTextSize="24sp"
                    android:autoSizeStepGranularity="6sp"
                    android:gravity="center|right"
                    android:paddingStart="5dp"
                    android:paddingEnd="3dp"
                    android:text="@string/faelmudharymajhol"
                    app:autoSizeTextType="none" />

                <TextView
                    android:id="@+id/pastpassive"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:autoSizeMaxTextSize="26sp"
                    android:autoSizeMinTextSize="24sp"
                    android:autoSizeStepGranularity="6sp"
                    android:gravity="center|right"
                    android:paddingStart="5dp"
                    android:paddingEnd="3dp"
                    android:text="@string/faelmadimajhool"
                    app:autoSizeTextType="none" />

                <TextView
                    android:id="@+id/presentactive"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:autoSizeMaxTextSize="26sp"
                    android:autoSizeMinTextSize="24sp"
                    android:autoSizeStepGranularity="6sp"
                    android:gravity="center|right"
                    android:paddingStart="5dp"
                    android:paddingEnd="3dp"
                    android:text="@string/faelmudhary"
                    app:autoSizeTextType="none" />

                <TextView
                    android:id="@+id/pastactive"
                    style="@android:style/TextAppearance.DeviceDefault.Small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:autoSizeMaxTextSize="26sp"
                    android:autoSizeMinTextSize="24sp"
                    android:autoSizeStepGranularity="6sp"
                    android:gravity="center|right"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    app:autoSizeTextType="none" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



    </androidx.constraintlayout.widget.ConstraintLayout>


</com.example.justJava.ZoomLayout>