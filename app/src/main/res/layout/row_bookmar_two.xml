<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">



        <LinearLayout
            android:id="@id/container"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/header"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"


                android:text="Header" />
            <ImageView
                android:id="@+id/imgview"
                android:src="@drawable/ic_pin_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"


                android:text="chapter" />
            <ImageView
                android:id="@+id/bookmark"
                android:visibility="gone"
                android:src="@drawable/ic_baseline_bookmark_add_36"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"


                android:text="chapter" />
            <TextView
                android:id="@+id/chapterno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"


                android:text="chapter" />

            <TextView
                android:id="@+id/surahname"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="2"


                android:text="sura" />

            <TextView
                android:id="@+id/verseno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"

                android:text="verse" />

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"


                android:text="time" />

            <ImageView
                android:id="@id/surahicon"
android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/space_2"
                android:layout_weight="1"
                android:paddingEnd="@dimen/space_2">

            </ImageView>
        </LinearLayout>


</LinearLayout>