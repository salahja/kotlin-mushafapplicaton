<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/headerAppLogo"
        android:layout_width="@dimen/space_7"
        android:layout_height="@dimen/space_7"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="@dimen/space_1"
        app:srcCompat="@drawable/ic_quran_nav_top_54" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/al_quran"
        android:textAppearance="@style/TextAppearance.Material3.ActionBar.Subtitle"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/header_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tafsir_by_word"
        android:textAppearance="@style/TextAppearance.Material3.ActionBar.Title" />

    <TextView
        android:id="@+id/headerAppVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/space_2"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />
</LinearLayout>
