<?xml version="1.0" encoding="utf-8"?>
<com.example.utility.ZoomLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadeScrollbars="true"
    android:isScrollContainer="true"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbars="vertical"
    android:singleLine="true">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/jumptoverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"

            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">
            <!--  android:background="@color/background_color_light_darkBlue"  -->

            <LinearLayout
                android:id="@id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip">

                    <ImageView
                        android:id="@id/dismissView"
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="8.0dip"
                        android:contentDescription="@null"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_cross"
                        app:tint="@color/colorPrimary" />

                    <TextView
                        android:id="@id/referenceView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:lines="1"
                        android:text="message"
                        android:textSize="18.0sp" />
                </RelativeLayout>

                <TextView
                    android:id="@id/meaning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:textDirection="ltr"


                    android:textSize="24.0sp" />

                <TextView
                    android:id="@id/rootward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:textDirection="ltr"


                    android:textSize="24.0sp" />

                <TextView
                    android:id="@id/arabicword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:textDirection="ltr"


                    android:textSize="24.0sp" />

                <TextView
                    android:id="@id/wordDictionary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:lineSpacingExtra="10dp"
                    android:paddingStart="20dp"
                    android:textDirection="ltr"


                    android:textSize="24.0sp" />

                <TextView
                    android:id="@id/wordDictionaryUrdu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.0dip"
                    android:textDirection="rtl"


                    android:textSize="24.0sp" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>


</com.example.utility.ZoomLayout>